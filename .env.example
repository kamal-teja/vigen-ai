AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-key-id
AWS_SECRET_ACCESS_KEY=your-secret-key
DDB_TABLE=vigen_status_table
MEDIACONVERT_H264_MAX_BITRATE=5000000
S3_BUCKET=vi-gen-dev
S3_PREFIX=outputs

OPENAI_API_KEY=unused
# Bedrock text (Claude) for script generation
BEDROCK_SCRIPT_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0

# Bedrock text (Nova Light) for evaluation / Nova Reel LLM control (lightweight)
BEDROCK_EVAL_MODEL_ID=amazon.nova-lite-v1:0

# Bedrock image (Nova Canvas)
BEDROCK_IMAGE_MODEL_ID=amazon.nova-canvas-v1:0

# Bedrock video (Nova Reel)
BEDROCK_VIDEO_MODEL_ID=amazon.nova-reel-v1:1

# Polly voice and format
POLLY_VOICE=Joanna
POLLY_FORMAT=mp3

# MediaConvert
MEDIACONVERT_ROLE_ARN=arn:aws:iam::463554030939:role/MediaConvert_Default_Role
MEDIACONVERT_ENDPOINT= # leave blank to auto-discover first time

# (Optional) KMS key for S3 encryption
S3_SSE_KMS_KEY_ARN=
# --- Video provider switch ---
VIDEO_PROVIDER=nova