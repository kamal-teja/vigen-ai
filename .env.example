# Root level environment template
# Copy this file to .env and fill in your values

# ===== AWS CONFIGURATION =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ===== S3 CONFIGURATION =====
S3_BUCKET_NAME=your-s3-bucket-name
S3_PREFIX=outputs

# ===== DYNAMODB TABLES =====
USERS_TABLE=adgen-users
ADVERTISEMENTS_TABLE=adgen-advertisements
DDB_TABLE=vigen_status_table

# ===== AUTHENTICATION =====
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== API ENDPOINTS =====
# For production: use http://crew-api:8001
# For development: docker-compose.dev.yml overrides this to crew-api-dev:8001
CREW_ENDPOINT_URL=http://crew-api:8001
VITE_API_URL=http://localhost:8000

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== AI MODEL CONFIGURATION =====
# Bedrock Models
BEDROCK_SCRIPT_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_EVAL_MODEL_ID=amazon.nova-lite-v1:0
BEDROCK_IMAGE_MODEL_ID=amazon.nova-canvas-v1:0
BEDROCK_VIDEO_MODEL_ID=amazon.nova-reel-v1:1

# Polly Configuration
POLLY_VOICE=Joanna
POLLY_FORMAT=mp3

# ===== MEDIACONVERT =====
MEDIACONVERT_ROLE_ARN=arn:aws:iam::YOUR-ACCOUNT:role/MediaConvert_Default_Role
MEDIACONVERT_ENDPOINT=
MEDIACONVERT_H264_MAX_BITRATE=5000000

# ===== OPTIONAL ENCRYPTION =====
S3_SSE_KMS_KEY_ARN=

# ===== DEVELOPMENT FLAGS =====
DEBUG=False
VIDEO_PROVIDER=nova